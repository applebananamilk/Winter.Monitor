{
  "$schema": "https://raw.githubusercontent.com/applebananamilk/winter.monitor/main/schemas/monitor-schema-v2.0.json",

  "Monitor": {
    "ServerName": "",
    "PollingIntervalInSeconds": 5,
    "AlarmSetting": {
      "RecoveryNotification": {
        "IsEnabled": true
      },
      "Convergence": {
        "IsEnabled": true,
        "EvalInterval": 1800
      },
      "Silence": {
        "IsEnabled": false,
        "MatchAll": true,
        "HealthCheckNames": [ "Process@DingTalk" ],
        "PeriodStart": "00:00:00",
        "PeriodEnd": "23:59:59"
      }
    },
    "SystemSetting": {
      "ProcessSettings": [
        {
          "ProcessName": "DingTalk"
        },
        {
          "ProcessName": "cloudmusic"
        }
      ],
      "WarningThreshold": {
        "Disk": 90,
        "Memory": 95
      }
    },
    "DatabaseSettings": [
      {
        "Name": "Redis",
        "ConnectionString": "127.0.0.1:6379",
        "DbType": "Redis",
        "WarningThreshold": {
          "Timeout": 3000
        }
      }
    ],
    "PingSettings": [
      {
        "Name": "PingName",
        "Host": "127.0.0.1",
        "WarningThreshold": {
          "Timeout": 3000
        }
      }
    ],
    "TcpSettings": [
      {
        "Name": "Zhihu",
        "Host": "140.249.84.135",
        "Port": 443,
        "WarningThreshold": {
          "Timeout": 3000
        }
      }
    ]
  },
  "Notifications": {
    "DingTalkRobot": {
      "IsEnabled": false,
      "Webhook": "",
      "AtMobiles": [],
      "IsAtAll": false
    },
    "Email": {
      "IsEnabled": false,
      "Host": "",
      "Port": 465,
      "UserName": "",
      "Password": "",
      "EnableSsl": true,
      "ReceiveEmails": ""
    }
  },
  "PeriodicReportingWorker": {
    "IsEnabled": true,
    "StartNow": true,
    "Cron": "0/5 * * * * ?"
  }
}